<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/2.6.0/uicons-brands/css/uicons-brands.css" />
  <link rel="stylesheet" href="/home/index.css" />
  <title>Dashboard - Categorías</title>
</head>

<body>
  <header class="header">
    <h1>TaskMate</h1>
  </header>

  <div class="container-fluid">
    <div class="row flex-nowrap">
      <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-secondary">
        <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
          <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-5 d-none d-sm-inline">Dashboard</span>
          </a>
          <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
            <li class="nav-item">
              <a href="/dashboard/tareas/" class="nav-link align-middle px-0">
                <span class="ms-1 d-none d-sm-inline text-white">Tareas</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="/dashboard/categorias/" class="nav-link align-middle px-0">
                <span class="ms-1 d-none d-sm-inline text-white">Categorías</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="/dashboard/listas/" class="nav-link align-middle px-0">
                <span class="ms-1 d-none d-sm-inline text-white">Listas</span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="col py-3">
        <div class="col-10 main-content">
          <div class="task-summary text-center mb-4">
            <span>Total Categorías: <strong>{{totalCount}}</strong></span>
          </div>

          <h2>Mis Categorías</h2>

          <div class="row">
            <div class="col-md-3">
              <div class="card text-center mb-4" style="cursor: pointer;" data-bs-toggle="modal"
                data-bs-target="#modalCrear">
                <div class="card-body">
                  <h5 class="card-title">AGREGAR</h5>
                </div>
              </div>
            </div>

            {{#each categorias}}
            <div class="col-md-3">
              <div class="card mb-4">
                <div class="card-body">
                  <h5 class="card-title">{{nombre_categoria}}</h5>
                  <p class="card-text">{{descripcion}}</p>
                  <button class="btn btn-info btn-ver" data-id="{{id}}">Ver</button>
                  <button class="btn btn-warning btn-editar" data-id="{{id}}">Editar</button>
                  <button class="btn btn-danger btn-eliminar" data-id="{{id}}">Eliminar</button>
                </div>
              </div>
            </div>
            {{/each}}



          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalCrear" tabindex="-1" aria-labelledby="modalCrearLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalCrearLabel">Crear Nueva Categoría</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="formCrear">
            <div class="mb-3">
              <label for="nombreCategoriaCrear" class="form-label">Nombre de la Categoría</label>
              <input type="text" class="form-control" id="nombreCategoriaCrear" required />
            </div>
            <div class="mb-3">
              <label for="descripcionCategoriaCrear" class="form-label">Descripción</label>
              <textarea class="form-control" id="descripcionCategoriaCrear" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Crear categoría</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div id="modalVer" class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Detalles de la Categoría</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h5 id="verNombreCategoria"></h5>
          <p><strong>Descripción:</strong> <span id="verDescripcionCategoria"></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEditarLabel">Editar Categoría</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="formEditar">
            <div class="mb-3">
              <label for="editNombreCategoria" class="form-label">Nombre de la Categoría</label>
              <input type="text" class="form-control" id="editNombreCategoria" required />
            </div>
            <div class="mb-3">
              <label for="editDescripcionCategoria" class="form-label">Descripción</label>
              <textarea class="form-control" id="editDescripcionCategoria" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <script src="/js/CategoriasDashboard.js"></script>


</body>

</html>